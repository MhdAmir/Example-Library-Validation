{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ValidationSettings": {
    "EnabledEnrichers": [
      "InputStream",
      "JsonFormat",
      "CommandInjection",
      "PathTraversal",
      "SQLInjection",
      "XSS"
    ],
    "MaxRetries": 3,
    "RetryBaseDelayMilliseconds": 100,
    "EnableDebugLogging": true,
    "BatchProcessing": {
      "MaxBatchSize": 15,
      "MaxQueueSize": 200,
      "MaxConcurrentBatches": 5,
      "BatchIntervalMilliseconds": 100
    }
  }
}
